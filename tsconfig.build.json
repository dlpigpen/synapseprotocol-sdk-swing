{
  "extends": "./tsconfig.json",
  "compilerOptions": {
    "module": "CommonJS",
    "stripInternal": true,
    "plugins": [
      {
        "transform": "typescript-transform-paths"
      }, // Transform paths in output .js files
      {
        "transform": "typescript-transform-paths",
        "afterDeclarations": true
      }
    ]
  }
}